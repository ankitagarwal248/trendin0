<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Heading</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Location</th>
      <th>Photographer</th>
      <th>Model</th>
      <th>Model Occupation</th>
      <th>Content</th>
      <th>Votes</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.heading %></td>
        <td><%= image_tag post.image.url(:medium) %></td>
        <td><%= post.caption %></td>
        <td><%= post.location %></td>
        <td><%= post.photographer_name %></td>
        <td><%= post.girl_name %></td>
        <td><%= post.girl_occupation %></td>
        <td><%= post.content %></td>
        <td><%= post.votes %></td>
        <td><%= post.comments %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

